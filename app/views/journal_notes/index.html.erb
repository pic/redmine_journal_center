<% javascript_tag do %>
RJC_BULLET = '<%= image_path('bullet.png', :plugin => 'redmine_journal_center')%>';
RJC_FLAG = '<%= image_path('flag.png', :plugin => 'redmine_journal_center')%>';
<% end %>
<% if @journals.empty? %>
<p class="nodata"><%= l(:label_no_data) %></p>
<% else %>
<%= render :partial => 'list', :locals => {:journals => @journals} %>
<p class="pagination"><%= simple_pagination_links_full @journal_pages, @journal_count %></p>
<% end %>

<% content_for :header_tags do %>
    <%= stylesheet_link_tag 'journal_center', :plugin => 'redmine_journal_center' %>
    <%= javascript_include_tag 'journal_center', :plugin => 'redmine_journal_center' %>
<% end %>
